    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "mac",
            "program": "${workspaceFolder}/build/run",
            "args": [],
            "cwd": "${workspaceFolder}"
        }, 
        {
            "name": "linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/run",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
            "visualizerFile": "${workspaceFolder}/ap.natvis",
            "showDisplayString": true
        }
    ]
}